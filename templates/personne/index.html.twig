{% extends 'base.html.twig' %}

{% block title %}Personnes {% endblock %}

{% block body %}
<div class="row"> 
    <div class="col-md-12"> 
    <h1 class="pb-2 border-bottom mb-4">Personnes</h1>
    </div>
<div class="col-md-8"> 

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Groupe</th>
                <th>Points</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.groupe }}</td>
                <td>{{ (personne.total) }}</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" href="{{ path('app_point_new', {'id': personne.id}) }}">Ajouter point</a>
                    
                    
                    <a href="{{ path('app_personne_show', {'id': personne.id}) }}">Afficher</a>
                    <a href="{{ path('app_personne_edit', {'id': personne.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Personne(s) trouv√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_personne_new') }}">Ajouter</a>
</div>
</div>
{% endblock %}
